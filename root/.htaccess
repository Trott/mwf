AddDefaultCharset UTF-8
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^public(.*)$ /ci/public$1 [L]
    RewriteRule ^shuttle/options /?s=shuttle [R,L]
    RewriteRule ^shuttle(.*)$ /ci/shuttle$1 [L]
    RewriteCond %{QUERY_STRING} ^([^&]&)*s=library(&|$)
    RewriteRule (.*) /library/? [R,L]
    RewriteRule ^library(.*)$ /ci/library$1 [L]
    RewriteRule ^events /news/?feed=ucsfevents [R,L]
    RewriteRule ^news/ucsfnews /news/ [L]
    RewriteRule ^directory(.*)$ /ci/directory$1 [L]
    RewriteRule ^fitness(.*)$ /ci/fitness$1 [L]
    RewriteRule ^home$ /
 # Feedback module calls home controller on form submit so both of these next two
 #    rewrites are needed for the feedback module.
    RewriteRule ^home(.*)$ /ci/home$1 [L]
    RewriteRule ^feedback(.*)$ /ci/feedback$1 [L]
</IfModule>
